{
  "compilerOptions": {
    "target": "es5",
    "strict": true,
    "lib": ["es7", "dom"],
    "module": "ESNext",
    "declaration": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noImplicitAny": true,
    "outDir": "dist"
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
